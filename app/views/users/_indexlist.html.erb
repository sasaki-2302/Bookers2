<div>
 <h2>User info</h2>
 <%= image_tag current_user.get_profile_image(100,100) %>
   <table class="table">
     <tr>
       <th>name</th>
       <th><%= current_user.name %></th>
     </tr>
     <tr>
       <th>introduction</th>
       <th><%= current_user.introduction %></th>
     </tr>
   </table>
  <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block hover" do %>
   <i class="fas fa-user-cog"></i>
  <% end %>
</div>

<div>
  <h2>New book</h2>
  <%= form_with model: Book.new do |f| %>
  <a>Title</a>
  <input class="form-control book_title" type="text" name="book[title]" id="book_title"></input>
  <a>Opinion</a>
  <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
  <%= f.submit 'Create Book', class: "btn btn-success" %>
  <% end %>
</div>