<div>
 <%= flash[:notice] %>
</div>

<div class="container">
 <div class="row">
   <div class="col-md-3">
     <%= render 'showlist', book: @book, user: @user %>
   </div>
   <div class="col-md-8 offset-md-1">
     <h2>Books</h2>
     <table class="table table-hover table-inverse">
       <thead>
         <tr>
           <th></th>
           <th>Title</th>
           <th>Opinion</th>
           <th></th>
          </tr>
       </thead>
       <tbody>
         <tr>
           <% @books.each do |book| %>
           <td>
             <%= link_to user_path(book.user.id) do %>
             <%= image_tag 'no_image.jpg' %>
             <% end %>
           </td>
           <td>
             <%= link_to book_path(book.id) do %>
             <%= book.title %>
             <% end %>
           </td>
           <td><%= book.body %></td>
         </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>